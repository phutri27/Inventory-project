<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <div>
            <%- include("err/errors.ejs") %>
            <form action="/edit_movie/<%= movieId %>" method="POST" enctype="multipart/form-data">
                <label for="movie_name">Movie Name</label>
                <input type="text" name="movie_name" id="movie_name" value="<%= movieName %>">
                <label for="genre">
                    <div class="container">
                        <% genres.forEach((genre) => { %>
                            <div>
                                <% const isChecked = selectedGenres.some(sg => sg == genre.id); %>
                                <input type="checkbox" 
                                name="genre_option[]" 
                                id="genre_<%= genre.id %>"
                                value="<%= genre.id %>"
                                <%= isChecked ? "checked" : "" %>>
                                <label for="genre_<%= genre.id %>"><%= genre.genre_name %></label>
                            </div>
                        <% }) %>
                    </div>
                </label>
                <label for="poster">Poster</label>
                <input type="file" name="poster" id="poster"  accept=".png, .jpg, .jpeg">
                <button type="submit">Edit movie</button>
            </form>
        </div>
    </body>
</html>